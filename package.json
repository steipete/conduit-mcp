{
  "name": "conduit-mcp",
  "version": "1.0.0",
  "description": "MCP server for rich file system ops, web content fetching (HTML/Markdown), image processing, search, diff & archives, via concise tools.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "./start.sh",
    "dev": "tsx watch src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "mcp",
    "filesystem",
    "web content",
    "image processing",
    "server"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "adm-zip": "^0.5.10",
    "axios": "^1.6.0",
    "diff": "^5.1.0",
    "file-type": "^18.7.0",
    "jsdom": "^22.1.0",
    "minimatch": "^9.0.0",
    "pino": "^8.16.0",
    "sharp": "^0.32.6",
    "tar": "^6.2.0",
    "turndown": "^7.1.2",
    "tsx": "^3.14.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.3",
    "@types/diff": "^5.0.6",
    "@types/file-type": "^10.2.0",
    "@types/jsdom": "^21.1.4",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.8.10",
    "@types/pino": "^7.0.5",
    "@types/sharp": "^0.32.0",
    "@types/tar": "^6.1.7",
    "@types/turndown": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitest/coverage-v8": "^1.2.0", 
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 