    "micromatch": "^4.0.8",
    "minimatch": "^9.0.0",
    "pino": "^8.16.0",
    "sharp": "^0.32.6",
    "tar": "^6.2.0",
    "tsx": "^4.19.4",
    "turndown": "^7.1.2"
  },
  "devDependencies": {
